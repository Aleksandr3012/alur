
mixin modal() 
	//  start modals
	//- a(href="modal-call").link-modal-js modal-call 
	div(id="modal-call"  style="display: none" )
		+b.modal-win
			+pic('modal-bg.jpg')(class="picture-bg")
			+form-wrap
				.text-center
					+e.title.form-data.h3.ttu Напишіть нам
				+input("",'email','Email')(required)
				+input("",'textarea','Повідомлення')(required)
				+e.btnWrap.text-right
					+e.BUTTON.btn.btn(type="submit" ) Відправити
				+policy()
	// #modal-call

	div(id="modal-callBack"  style="display: none" )
		+b.modal-win
			+pic('modal-bg.jpg')(class="picture-bg")
			+form-wrap
				.text-center
					+e.title.form-data.h3.ttu Обратный звонок
					p.after-headline Заполните заявку и&nbsp;мы&nbsp;с&nbsp;Вами свяжемся в&nbsp;течение 15&nbsp;минут
				+input("Ваше Имя")(required)  
				+e.btnWrap.text-right
					+e.BUTTON.btn.btn(type="submit"  )  Відправити	
				+policy()
	// #modal-callBack

	div(id="modal-thanks"  style="display: none" )
		+b.modal-win
			+pic('modal-bg.jpg')(class="picture-bg")
			+form-wrap
				.text-center
					+e.title.form-data.h3.ttu Обратный звонок
					p.after-headline Заполните заявку и&nbsp;мы&nbsp;с&nbsp;Вами свяжемся в&nbsp;течение 15&nbsp;минут
				+input("Ваше Имя")(required)  
				+e.btnWrap.text-right
					+e.BUTTON.btn.btn(type="submit")  Готово
				+policy()
	// #modal-thanks
	// end modals