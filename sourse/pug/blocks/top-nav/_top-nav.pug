mixin mob-mnu()
	+b.menu-mobile--js.d-lg-none
		+b.toggle-menu-mobile--js(type="button")
			span
		+e.inner
			+mnu()
	//  мобильное меню
mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		.container
			.row.align-items-center
				.col.col-lg-auto 
					+e.logo(href="/")
						+pic('logo.png')
				.col.d-none.d-lg-block
					+mnu()
				.col-auto.top-nav__search-col
					+b.searchBlock 
						+e.hidden--js
							+form-wrap('inp')
								+input('','search')
								+e.btn(type="submit") 
									+icon('search')
						+e.toggle--js(type="button")
							+icon('search')
							+icon('close')
				.col-auto.d-none.d-md-block
					+e.phone(href='tel:+380977012400') 
						+icon('phone')
						span +38 097 701 2400
				+e.col.col-auto
					+flyBlock
				.col-auto.d-lg-none
					+b.toggle-menu-mobile--js(type="button")
						span
	// end top-nav

