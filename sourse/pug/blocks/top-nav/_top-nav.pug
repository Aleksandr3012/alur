mixin flyBlock 
	+b.flyBlock&attributes(attributes)
		+e.item(href="#")
			+pic('ua.png').d-none
			+pic('ru.png')
		+e.item(href="https://www.facebook.com/alluragro.new/" target="_blank").d-none.d-md-block
			img.svg(src="img/svg/fb.svg", alt="Facebook" loading="lazy")
